.team {

    &-mate {
        width: 25%;

        float: left;
        position: relative;

        &__img {
            height: auto;
            width: 100%;
            display: block;
            margin: 0;
            padding: 0;
        }
    }
}

.preview-video-box_team {
    height: 100%;
    border: 1px solid dandelion;
}

.preview-video__play_team {
    color: dandelion;
    border: none;
}

@media screen and (max-width: 768px) {

    .team-mate {
        width: 50%;
    }
}