.mfp-content {
    width: 640px !important;
}

.video-popup {
    width: 640px;
    height: 360px;
}

.youtube {
	background-color: #000;
	margin-bottom: 30px;
	position: relative;
	padding-top: 56.25%;
	overflow: hidden;
	cursor: pointer;
}
.youtube img {
	width: 100%;
	top: -16.82%;
	left: 0;
	opacity: 0.7;
}
.youtube img,
.youtube .play-button {
	cursor: pointer;
}
.youtube img,
.youtube iframe,
.youtube .play-button,
.youtube .play-button:before {
	position: absolute;
}
.youtube iframe {
	height: 100%;
	width: 100%;
	top: 0;
	left: 0;
}

.html5-video-player .video-click-tracking, .html5-video-player .video-stream {
    outline: none;
}

@media screen and (max-width: 670px) {

    .video-popup {
        width: 360px;
        height: 240px;
        margin: 0 auto;
    }

    .mfp-content {
        width: 360px !important;
    }
}

@media screen and (max-width: 374px) {

    .video-popup {
        width: 240px;
        height: 135px;
        margin: 0 auto;
    }

    .mfp-content {
        width: 240px !important;
    }
}