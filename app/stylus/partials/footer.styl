.footer {
    margin: 0 30px;

    &__logo {

        &-box {

        }

        &-text {
            font-family: secondary-ff;
            line-height: 1.32;
            letter-spacing: 0.4px;
            font-size: 21px;
            font-weight: 300;
            text-transform: uppercase;

            color: warm-grey;
        }
    }

    &__header {
        width: 175px;
        position: relative;
    }

    &__header:before {
        content: '';
        background: warm-grey;
        height: 0.5px;
        width: 1000%;
        margin-top: 5px;
        position: absolute;
        right: -949%;
        bottom: 5px;
        left: 93.5%;
        z-index: 5;
    }

    &-nav {
        align-items: baseline;
        justify-content: space-around;
        padding: 0 30% 0 15%;

        margin: 25px 0 60px;

        &__box1, &__box2, &__box3 {
            flex-direction: column;
            align-items: initial;
        }

        &__box2 {

        }

        &__box3 {

        }

        &__link {
            font-family: secondary-ff;
            font-size: 20px;
            line-height: 1.5;
            letter-spacing: 0.4px;

            color: warm-grey;
        }
    }

    &-contacts {

        &__fb, &__youtube {
            display: none;
        }

        &__fb:after, &__youtube:after {
            font-family: third-ff;

            content: "\f343";
            color: warm-grey;

            transform: scale(2,2);
            padding-top: 10px;
        }

        &__youtube {
            
        }

        &__youtube:after {
            content: "\f409"; 
        }
    }

}

@media screen and (max-width: 768px) {
    .footer-contacts {
        display: flex;
    }

    .footer-nav {
        justify-content: space-between;
        padding: 0;
    }

    .footer-contacts__fb, .footer-contacts__youtube {
        display: flex;
        margin-left: 20px;
    }

}

@media screen and (max-width: 520px) {
    .footer {
        display: flex;
    }

    .footer-nav {
        justify-content: center;
        flex-direction: column;
        padding: 0;
    }

    .footer-contacts__fb {
        margin-left: 0;
    }

}