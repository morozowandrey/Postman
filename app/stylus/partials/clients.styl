.clients {
    margin-bottom: 30px;

    &-box {
        margin: 0 30px;
    }

    &-heading {
        width: 250px;
        position: relative;

        margin: 60px 0 70px 8%;
        padding: 17px 0;

        font-size: 20px;
        letter-spacing: 0.8px;
        text-align: center;
        text-transform: uppercase;

        background-color: white;
        color: black;

        &__text {

        }
    }

    &-heading:after {
        content: url(../images/white-triangle.jpg);

        position: absolute;
        bottom: -25%;
        left: 44%;
    }

    &-heading:before {
        content: '';
        background: warm-grey;
        height: 1px;
        width: 1000%;
        margin-top: 5px;
        position: absolute;
        /* right: 4px; */
        bottom: -10px;
        right: -100%;
        left: -951%;
        z-index: 5;
    }
}

.client {
    width: 33%;
    height: 90px;

    margin-bottom: 55px;

    float: left;
    
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;

    &-image {

    }

    &-image:hover {
        transform: scale(1.1,1.1);
    }
}

@media screen and (max-width: 620px) {
    .client {
        height: 100%;
        width: 100%;
        margin-bottom: 30px;
    }

    .clients-heading {
        margin: 60px auto 70px;
    }
}