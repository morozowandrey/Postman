.clients {
    margin-bottom: 30px;

    &-box {
        margin: 0 30px;
    }

    &-header {

        &__text {
            width: 250px;
            position: relative;

            margin: 60px 0 70px 8%;
            padding: 17px 0;

            font-size: 20px;
            letter-spacing: 0.8px;
            text-align: center;
            text-transform: uppercase;

            background-color: white;
            color: black;
        }
    }
}

.client {
    width: 33%;
    height: 90px;

    margin-bottom: 55px;

    float: left;
    
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;

    &-image {

    }

    &-image:hover {
        transform: scale(1.1,1.1);
    }
}

@media screen and (max-width: 620px) {
    .client {
        height: 100%;
        width: 100%;
        margin-bottom: 30px;
    }

    .clients-heading {
        margin: 60px auto 70px;
    }
}