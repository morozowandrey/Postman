.white, .black {

    &-heading {
        width: 160px;
        position: relative;

        margin: 60px 0 70px 25%;
        padding: 17px 0;

        font-size: 20px;
        letter-spacing: 0.8px;
        text-align: center;
        text-transform: uppercase;

        background-color: white;
        color: black;
    }
}

.black-heading {
    width: 250px;
    margin: 60px auto 70px;
    background-color: black;
    color: white;
}

.white-heading:after, .black-heading:after {
    content: "";
    position: absolute;
    bottom: -34%;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 0;
    border-left: 20px solid transparent;
    border-right: 20px solid transparent;
    border-top: 20px solid white;
}

.white-heading:before, .black-heading:before {
    content: '';
    background: warm-grey;
    height: 1px;
    width: 1000%;
    position: absolute;
    bottom: -19px;
    right: -100%;
    left: -949%;
    z-index: 5;
}

.black-heading:after {
    fill: black;
    left: 50%;
    -webkit-transform: translateX(-50%);
    transform: translateX(-50%);
    width: 0;
    height: 0;
    border-left: 20px solid transparent;
    border-right: 20px solid transparent;
    border-top: 20px solid #000000;
}

.black-heading:before, .skills__heading:before {
    right: -949%;
    left: 50%;
}

