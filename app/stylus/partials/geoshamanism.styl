.geoshamanism {
    text-align: center;
    margin-bottom: 195px;

    &__caption, &__link {
        color: white;
        font-family: secondary-ff;
        font-size: 20px;
        line-height: 1.5;
        letter-spacing: 0.4px;
    }

    &__link {
        position: relative;
    }

    &__link:before {
        content: url(../images/arrow-pointer.png);
        position: absolute;
        left: -60px;
    }
}

@media screen and (max-width: 778px) {
    .geoshamanism {
        display: none;
    }
}

@media screen and (max-width: 640px) {

    .skills__heading {
        width: 260px;
        font-size: 17px;
    }
}