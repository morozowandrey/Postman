.cases {
    position: relative;
    margin-bottom: 110px;

    &__heading {
        max-width: 490px;

        font-size: 30px;
        color: white;
        line-height: 1.4;
        letter-spacing: 0.6px;
    }

}

.navigation-box_mainPage {
    width: 46%;
    position: relative;
    z-index: 1;
}

.header-menu_mainPage {
    max-width: 580px;
    padding: 30px 0 40px 60px;
    right: 0;
    float: right;
    position: relative;
}

.header-item_mainPage:hover:before {
    width: 55px;
    overflow: hidden;
}

////////////////////////////////////////////////

.dots {
    width: 54%;
    float: left;
    position: relative;

    &__clipBox {
        position: absolute;
        top: 222px;
        left: -26%;

        display: flex;
        justify-content: center;
    }

    &__clip:before {
        display: none;
    }

    &__img {
        max-width: 700px;
        margin-bottom: 160px;
        margin-right: 75px;
    }

    &__caption {

    }
}

.clip__img {
    position: absolute;
    top: 15px;
    left: 50%;
    transform: translateX(-50%);
}

@media screen and (max-width: 1350px) {
    .cases {
        margin-bottom: 240px;
    } 
    .dots__clipBox {
        top: 100%;
        right: 0;
        left: inherit;
    }
}

@media screen and (max-width: 1000px) {

    .navigation-box_mainPage {
        width: 60%;
        margin: 0 auto;
        float: initial;
    }

    .dots {
        display: none;
    }

    .header-menu_mainPage {
        max-width: 100%;
    }
}

@media screen and (max-width: 795px) {

    .navigation-box_mainPage {
        width: 70%;
    }
}

@media screen and (max-width: 768px) {

    .cases {
        margin-bottom: 160px;
    }
}

@media screen and (max-width: 500px) {

    .navigation-box_mainPage {
        width: 100%;
    }
}