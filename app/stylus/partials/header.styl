.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: black-two;

  &-logo {
    display: inline-block;
    margin: 60px 45px 60px 0;
    width: 44px;
    height: 45px;
  }
  
  &-menu__button {
    display: inline-block;
    margin: 60px 0 60px 45px;
    width: 47px;
    height: 41px;
  }

  &-menu__button:hover {
    cursor: pointer;
  }

  &-link-box {

    &__link {
      margin-left: 9px;
      position: relative;

      font-family: secondary-ff;
      font-size: 20px;
      color: warm-grey;
    }

    &__link:after {
      content: "|";

      position: absolute;
      right: -10px;
    }

    &__link:last-of-type:after {
      content: " ";
    }

    &__link:first-of-type {
      margin-left: 0;
    }

    &__link:hover {
      color: warm-grey;
    }

    &__link:focus {
      color: warm-grey;
    }
  }
}

@media screen and (max-width: 460px) {
  .header {
    align-items: initial;
    height: 160px;
    position: relative;
  }

  .header-logo, .header-menu__button {
    margin: 15px;
  }

  .header-link-box {
    width: 100%;
    position: absolute;
    bottom: 40px;
    text-align: center;
  }
}